mixin multimedia
    // Inicio Multimedios
    section#multimedia
        .corners
            .multimedia
                .multimedia__content
                    .multimedia__box
                        .multimedia__imgBx
                            append variables
                            - nameImages = 'gall.jpg'
                            - nameMulti = 'Galer√≠a'
                            img(src=`${pathImages}${nameImages}` alt=`${nameImages}` title=`${nameImages}`).multimedia__img
                        .multimedia__contentBx
                            p.multimedia__pg=`${nameMulti}`
                                br
                                a(href=`${pathLinkPages}${galeria}`).multimedia__link: <i class="fas fa-chevron-circle-down"></i>
                    .multimedia__box
                        .multimedia__imgBx
                            append variables
